{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "cargo build",
            "type": "shell",
            "command": "cargo",
            "args": [
                "build",
                "--manifest-path=./src-tauri/Cargo.toml",
                "--no-default-features"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$rustc"]
        },
        {
            "label": "ui:dev",
            "type": "shell",
            "isBackground": true,
            "command": "powershell",
            "args": [
                "-NoLogo",
                "-ExecutionPolicy",
                "Bypass",
                "-Command",
                "chcp 65001; yarn dev"
            ],
            "problemMatcher": {
                "owner": "custom",
                "pattern": [
                    {
                        "regexp": "^(\\S+):(\\d+):(\\d+):\\s+(error|warning):\\s+(.*)$",
                        "file": 1,
                        "line": 2,
                        "column": 3,
                        "severity": 4,
                        "message": 5
                    }
                ],
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": ".*VITE.*", // サーバー起動を示す出力を検出
                    "endsPattern": ".*ready.*" // タスクの完了を示すキーワード
                }
            }
        },
        {
            "label": "build-and-dev",
            "dependsOrder": "sequence",
            "dependsOn": [
                "cargo build",
                "ui:dev"
            ],
            "problemMatcher": []
        }
    ]
}
